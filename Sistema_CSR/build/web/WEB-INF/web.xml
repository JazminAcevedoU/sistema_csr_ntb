<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>TipoPersonaController</servlet-name>
        <servlet-class>edu.tretino.controller.TipoPersonaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PersonaController</servlet-name>
        <servlet-class>edu.tretino.controller.PersonaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PerfilUsuarioController</servlet-name>
        <servlet-class>edu.tretino.controller.PerfilUsuarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsuarioController</servlet-name>
        <servlet-class>edu.tretino.controller.UsuarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PublicacionController</servlet-name>
        <servlet-class>edu.tretino.controller.PublicacionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>edu.tretino.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ComentarioController</servlet-name>
        <servlet-class>edu.tretino.controller.ComentarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PublicacionNotificacionController</servlet-name>
        <servlet-class>edu.tretino.controller.PublicacionNotificacionController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TipoPersonaController</servlet-name>
        <url-pattern>/tipopersona</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PersonaController</servlet-name>
        <url-pattern>/persona</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PerfilUsuarioController</servlet-name>
        <url-pattern>/perfilusuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsuarioController</servlet-name>
        <url-pattern>/usuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PublicacionController</servlet-name>
        <url-pattern>/publicacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/sesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ComentarioController</servlet-name>
        <url-pattern>/comentario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PublicacionNotificacionController</servlet-name>
        <url-pattern>/pbpendiente</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
